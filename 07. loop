//using loop & continue break

'use strict'

const cricketer = [
    'tamim',
    'soumya',
    'sakib',
    'moshfiq',
    'mehedi',
    'afif',
    'shohan'
];
const score = [100, 10, 25, 58, 105, 23, 75]
// console.log(cricketer.length);
for (let i = 0; i < cricketer.length - 1; i++) {
    if (score[i] < 50) continue;
    else if (score[i] >= 50) {
        console.log(`${cricketer[i]} scored ${score[i]}`);
    }

}

----------------

//while loop

'use strict'

let dice = Math.trunc(Math.random() * 6 + 1);

while (dice != 6) {
    console.log(`You hit ${dice}.`);

    dice = Math.trunc(Math.random() * 6 + 1);
    
    if (dice == 6) console.log(`You hit 6. Thank you!`);

}
-----------------

//while loop and do while loop

'use strict'

let dice

do {
    dice = Math.trunc(Math.random() * 6 + 1);
    
    console.log(`You hit ${dice}.`);
    
    if (dice == 6) console.log(`Thank you!`);

} while (dice != 6);
